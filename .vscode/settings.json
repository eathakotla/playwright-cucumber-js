{
  "terminal.integrated.fontFamily": "Martian Mono",
  "terminal.integrated.fontSize": 12,
  "editor.fontFamily": "'Martian Mono Semicondensed',Consolas, 'Courier New', monospace",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "[cucumber]": {
    "editor.defaultFormatter": "CucumberOpen.cucumber-official"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "cucumber.features": ["tests/features/**/*.feature"],
  "cucumber.glue": ["tests/steps/**/*.ts", "src/cucumber/**/*.ts"]
}
